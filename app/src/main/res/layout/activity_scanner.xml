<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_shade_1"
    tools:context=".ScannerActivity">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:src="@drawable/scanner"
        android:id="@+id/idCaptureImage"></ImageView>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/idCaptureImage"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/idDetectedText"
        android:textColor="@color/white"
        android:text="Let's capture something!"
        android:textAlignment="center"
        android:textSize="20sp"
        android:editable="true"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="4dp"></TextView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/idDetectedText"
        android:layout_marginTop="40dp"
        android:text="CAMERA"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        app:backgroundTint="@color/techno_blue"
        android:id="@+id/idBtnCam"></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/idBtnCam"
        android:layout_marginTop="40dp"
        android:text="DETECT TEXT"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        app:backgroundTint="@color/techno_blue"
        android:id="@+id/idBtnDetectText"></Button>

</RelativeLayout>