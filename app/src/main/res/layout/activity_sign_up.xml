<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_shade_1"
    tools:context=".signUp">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/scanner"
        android:id="@+id/idCaptureImage"></ImageView>

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Name"
        android:layout_below="@+id/idCaptureImage"
        android:textColorHint="@color/techno_blue"
        android:textColor="@color/white"
        android:autofillHints="name"
        app:backgroundTint="@color/techno_blue" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameEditText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Email"
        android:textColorHint="@color/techno_blue"
        android:textColor="@color/white"
        android:autofillHints="emailAddress"
        app:backgroundTint="@color/techno_blue" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailEditText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Password"
        android:textColorHint="@color/techno_blue"
        android:textColor="@color/white"
        android:autofillHints="password"
        android:inputType="textPassword"
        app:backgroundTint="@color/techno_blue" />

    <EditText
        android:id="@+id/confirmPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordEditText"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Confirm Password"
        android:textColorHint="@color/techno_blue"
        android:textColor="@color/white"
        android:autofillHints="password"
        android:inputType="textPassword"
        app:backgroundTint="@color/techno_blue" />

    <Button
        android:id="@+id/signupButtonHere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirmPasswordEditText"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:backgroundTint="@color/techno_blue"
        android:background="@drawable/button_bg"
        android:text="Sign Up"/>

</RelativeLayout>
